<div class='purchase-form'>
  <div class='purchase-form-container'>
    <div class='purchase-form-form'>
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Eg, crypto@cryptotracker.com' %>
        </div>

        <div class="field">
          <label>Password</label>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length} characters minimum)" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Repat your password' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", id: 'purchase-form-btn' %>
        </div>
      <% end %>

      <p class='signup-text'>Already have an account? <a href="<%= new_user_session_path %>">Sign In</a></p>
      <p class='signup-text'>Forgot your password? 
      <a href="<%= new_password_path(resource_name) %>">Reset it</a></p>
    </div>
  </div>
</div>