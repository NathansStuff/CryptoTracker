<h1>Purchases</h1>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Cost per</th>
      <th>Amount</th>
      <th>Fee</th>
      <th>Total cost</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= link_to purchase.symbol, purchase %></td>
        <td><%= purchase.cost_per %></td>
        <td><%= purchase.amount %></td>
        <td><%= purchase.fee %></td>
        <td><%= purchase.total_cost %></td>
        <td><%= purchase.description %></td>
        <td><%= purchase.created_at.strftime("%d/%m/%y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Purchase', new_purchase_path %>



<% for purchase in @purchases %>
  <div class='purchase-card'>
    <%= image_tag "color/#{purchase.symbol.downcase}.png" %>
  </div>
<% end %>